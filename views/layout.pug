doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title CSCI 2720 Project
    link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/bootstrap.css', rel='stylesheet')
    link(href='/css/main.css', rel='stylesheet')
    block header

  body(ng-app='app')
    // start nav bar
    nav.navbar.navbar-fixed-top(ng-controller='headerCtrl')
      .container
        .navbar-header
          a.navbar-brand(href="/") CSCI 2720 Project
        #navbar.navbar-collapse.collapse
          if !user
            form.navbar-form.navbar-right(action="/login", method="post")
              .form-group
                input.form-control.text-white(type='text', ng-model='$parent.userData.userid', placeholder='Username', name='userid')
              .form-group
                input.form-control.text-white(type='password', ng-model='$parent.userData.passwd', placeholder='Password', name='passwd')
              button.btn.btn-success(type="submit" value="Submit") Sign in
          else
            a.btn.btn-danger.navbar-btn.navbar-right(href='/logout', role='button') Logout
            p.navbar-text.navbar-right.text-white Signed in as #{user}&nbsp;&nbsp;
        // /.navbar-collapse
      // end nav bar
    block content

    //js lib
    script(src='/js/jquery.min.js')
    script(src='js/bootstrap.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-route.js')
    script(src='//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.3.1.js')

    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.15/angular-sanitize.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/ng-csv/0.3.6/ng-csv.min.js')


    //custom js
    script(src='js/module.js')
    script(src='js/headerCtrl.js')


    block scriptcontent
